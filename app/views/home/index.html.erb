<h1 class='page-header'>Leaderboard</h1>

<table class="table">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Score</th>
      <th>Games played</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <th scope="row"><%= index + 1 %> </th>
        <td><%= user.email %></td>
        <td><%= user.rating %></td>
        <td><%= user.games.length %></td>
      </tr>
    <% end %>
  </tbody>
</table>
